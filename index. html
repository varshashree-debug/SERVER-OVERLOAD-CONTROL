<body>
    <div class="intro">
        <h1>üñ•Ô∏è Server Monitor Dashboard</h1>
        <p>Real-time monitoring with 24-hour analytics</p>
    </div>

    <div class="container">
        <div class="stats-overview">
            <div class="stat-card">
                <div class="stat-icon">üü¢</div>
                <div class="stat-value" id="activeServers">3</div>
                <div class="stat-label">Active Servers</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">‚ö°</div>
                <div class="stat-value" id="avgCpu">0%</div>
                <div class="stat-label">Avg CPU Usage</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üì°</div>
                <div class="stat-value" id="avgNetwork">0%</div>
                <div class="stat-label">Avg Network</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">‚ö†Ô∏è</div>
                <div class="stat-value" id="alertCount">0</div>
                <div class="stat-label">Total Alerts</div>
            </div>
        </div>

        <div class="servers-grid" id="serversGrid"></div>

        <div class="analytics-section">
            <div class="analytics-header">
                <div class="analytics-title">
                    üìä 24-Hour Analytics
                </div>
                <div class="time-selector">
                    <button class="time-btn active" onclick="changeTimeRange('24h')">24 Hours</button>
                    <button class="time-btn" onclick="changeTimeRange('12h')">12 Hours</button>
                    <button class="time-btn" onclick="changeTimeRange('6h')">6 Hours</button>
                    <button class="time-btn" onclick="changeTimeRange('1h')">1 Hour</button>
                </div>
            </div>
            <canvas id="analyticsChart"></canvas>
            <div class="graph-legend">
                <div class="legend-item">
                    <div class="legend-color" style="background: #667eea;"></div>
                    <span>Server 1</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color" style="background: #f5576c;"></div>
                    <span>Server 2</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color" style="background: #4CAF50;"></div>
                    <span>Server 3</span>
                </div>
            </div>
        </div>

        <div class="request-section">
            <div class="request-title">üì§ Send Request to Server</div>
            <div class="input-group">
                <select id="serverSelect">
                    <option value="Server 1">Server 1</option>
                    <option value="Server 2">Server 2</option>
                    <option value="Server 3">Server 3</option>
                </select>
                <input type="text" id="messageInput" placeholder="Enter your message...">
                <button id="sendBtn" onclick="sendRequest()">Send üöÄ</button>
            </div>
            <div class="rate-limit-info">
                <span>Messages sent this minute:</span>
                <span><span id="msgCount">0</span>/5</span>
            </div>
        </div>
    </div>

    <script>
        // Server data
        const servers = [
            { name: 'Server 1', cpu: 0, network: 0, icon: 'üîµ' },
            { name: 'Server 2', cpu: 0, network: 0, icon: 'üî¥' },
            { name: 'Server 3', cpu: 0, network: 0, icon: 'üü¢' }
        ];

        // Rate limiting
        let messageTimestamps = [];
        let totalAlerts = 0;

        // 24-hour analytics data (24 hours * 60 minutes = 1440 data points, simplified to 48 points - every 30 min)
        const analyticsData = {
            'Server 1': [],
            'Server 2': [],
            'Server 3': []
        };

        let currentTimeRange = '24h';
        const alertedServers = new Set();

        // Initialize 24-hour data
        function initAnalyticsData() {
            const points = 48; // 48 points for 24 hours (every 30 minutes)
            servers.forEach(server => {
                for (let i = 0; i < points; i++) {
                    analyticsData[server.name].push(Math.floor(Math.random() * 100));
                }
            });
        }

        // Initialize
        function init() {
            initAnalyticsData();
            renderServers();
            setupCanvas();
            updateServers();
            setInterval(updateServers, 3000);
            setInterval(updateAnalytics, 30000); // Update analytics every 30 seconds
        }

        function renderServers() {
            const grid = document.getElementById('serversGrid');
            grid.innerHTML = servers.map((server, idx) => `
                <div class="server-card">
                    <div class="server-header">
                        <div class="server-name">
                            <span class="server-icon">${server.icon}</span>
                            ${server.name}
                        </div>
                        <div class="status-badge status-ok" id="status-${idx}">OK</div>
                    </div>
                    <div class="metric">
                        <div class="metric-label">
                            <span>üíª CPU Usage</span>
                            <span id="cpu-${idx}">0%</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill cpu-fill" id="cpu-bar-${idx}" style="width: 0%">0%</div>
                        </div>
                    </div>
                    <div class="metric">
                        <div class="metric-label">
                            <span>üåê Network Usage</span>
                            <span id="network-${idx}">0%</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill network-fill" id="network-bar-${idx}" style="width: 0%">0%</div>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function updateServers() {
            let totalCpu = 0;
            let totalNetwork = 0;
            let activeCount = 0;

            servers.forEach((server, idx) => {
                server.cpu = Math.floor(Math.random() * 100);
                server.network = Math.floor(Math.random() * 100);

                totalCpu += server.cpu;
                totalNetwork += server.network;
                activeCount++;

                document.getElementById(`cpu-${idx}`).textContent = server.cpu + '%';
                document.getElementById(`network-${idx}`).textContent = server.network + '%';
                
                const cpuBar = document.getElementById(`cpu-bar-${idx}`);
                const networkBar = document.getElementById(`network-bar-${idx}`);
                
                cpuBar.style.width = server.cpu + '%';
                cpuBar.textContent = server.cpu + '%';
                networkBar.style.width = server.network + '%';
                networkBar.textContent = server.network + '%';

                const status = document.getElementById(`status-${idx}`);
                const isOverload = server.cpu > 80 || server.network > 80;
                
                if (isOverload) {
                    status.className = 'status-badge status-danger';
                    status.textContent = 'OVERLOAD ‚ö†Ô∏è';
                    
                    if (!alertedServers.has(server.name)) {
                        showAlert(server.name, server.cpu, server.network);
                        alertedServers.add(server.name);
                        totalAlerts++;
                        document.getElementById('alertCount').textContent = totalAlerts;
                    }
                } else if (server.cpu > 60 || server.network > 60) {
                    status.className = 'status-badge status-warning';
                    status.textContent = 'WARNING ‚ö°';
                    alertedServers.delete(server.name);
                } else {
                    status.className = 'status-badge status-ok';
                    status.textContent = 'OK ‚úì';
                    alertedServers.delete(server.name);
                }
            });

            document.getElementById('activeServers').textContent = activeCount;
            document.getElementById('avgCpu').textContent = Math.floor(totalCpu / activeCount) + '%';
            document.getElementById('avgNetwork').textContent = Math.floor(totalNetwork / activeCount) + '%';
        }

        function updateAnalytics() {
            servers.forEach(server => {
                analyticsData[server.name].push(Math.floor(Math.random() * 100));
                if (analyticsData[server.name].length > 48) {
                    analyticsData[server.name].shift();
                }
            });
            drawAnalytics();
        }

        function showAlert(serverName, cpu, network) {
            const alert = document.createElement('div');
            alert.className = 'alert';
            alert.innerHTML = `
                <strong>‚ö†Ô∏è ALERT!</strong>
                ${serverName} is overloaded!<br>
                CPU: ${cpu}% | Network: ${network}%
            `;
            document.body.appendChild(alert);

            setTimeout(() => {
                alert.style.animation = 'slideIn 0.4s ease-out reverse';
                setTimeout(() => alert.remove(), 400);
            }, 5000);
        }

        // Canvas setup
        let canvas, ctx;

        function setupCanvas() {
            canvas = document.getElementById('analyticsChart');
            ctx = canvas.getContext('2d');
            canvas.width = canvas.offsetWidth;
            canvas.height = 350;
            drawAnalytics();
        }

        function getDataForTimeRange() {
            const ranges = {
                '1h': 2,
                '6h': 12,
                '12h': 24,
                '24h': 48
            };
            const points = ranges[currentTimeRange];
            
            const result = {};
            servers.forEach(server => {
                result[server.name] = analyticsData[server.name].slice(-points);
            });
            return result;
        }

        function drawAnalytics() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            const data = getDataForTimeRange();
            const colors = ['#667eea', '#f5576c', '#4CAF50'];
            const padding = 50;
            const graphWidth = canvas.width - padding * 2;
            const graphHeight = canvas.height - padding * 2;

            // Draw grid
            ctx.strokeStyle = '#e0e0e0';
            ctx.lineWidth = 1;
            for (let i = 0; i <= 5; i++) {
                const y = padding + (graphHeight / 5) * i;
                ctx.beginPath();
                ctx.moveTo(padding, y);
                ctx.lineTo(canvas.width - padding, y);
                ctx.stroke();
                
                ctx.fillStyle = '#666';
                ctx.font = '14px Arial';
                ctx.textAlign = 'right';
                ctx.fillText((100 - i * 20) + '%', padding - 10, y + 5);
            }

            // Draw time labels
            const timeLabels = {
                '1h': ['Now', '30m', '1h'],
                '6h': ['Now', '3h', '6h'],
                '12h': ['Now', '6h', '12h'],
                '24h': ['Now', '12h', '24h']
            };
            
            const labels = timeLabels[currentTimeRange];
            ctx.textAlign = 'center';
            labels.forEach((label, i) => {
                const x = canvas.width - padding - (graphWidth / (labels.length - 1)) * i;
                ctx.fillText(label, x, canvas.height - padding + 25);
            });

            // Draw lines with gradient
            servers.forEach((server, idx) => {
                const serverData = data[server.name];
                if (serverData.length < 2) return;

                // Create gradient
                const gradient = ctx.createLinearGradient(0, 0, canvas.width, 0);
                gradient.addColorStop(0, colors[idx]);
                gradient.addColorStop(1, colors[idx] + 'aa');

                ctx.strokeStyle = colors[idx];
                ctx.lineWidth = 3;
                ctx.beginPath();

                serverData.forEach((value, i) => {
                    const x = padding + (graphWidth / (serverData.length - 1)) * i;
                    const y = padding + graphHeight - (value / 100) * graphHeight;
                    
                    if (i === 0) {
                        ctx.moveTo(x, y);
                    } else {
                        ctx.lineTo(x, y);
                    }
                });

                ctx.stroke();

                // Draw area under line
                ctx.lineTo(canvas.width - padding, canvas.height - padding);
                ctx.lineTo(padding, canvas.height - padding);
                ctx.closePath();
                
                const areaGradient = ctx.createLinearGradient(0, padding, 0, canvas.height - padding);
                areaGradient.addColorStop(0, colors[idx] + '40');
                areaGradient.addColorStop(1, colors[idx] + '05');
                ctx.fillStyle = areaGradient;
                ctx.fill();
            });
        }

        function changeTimeRange(range) {
            currentTimeRange = range;
            document.querySelectorAll('.time-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            drawAnalytics();
        }

        function sendRequest() {
            const now = Date.now();
            messageTimestamps = messageTimestamps.filter(time => now - time < 60000);

            if (messageTimestamps.length >= 5) {
                alert('‚õî Rate limit exceeded! You can only send 5 messages per minute.');
                return;
            }

            const server = document.getElementById('serverSelect').value;
            const message = document.getElementById('messageInput').value;

            if (!message) {
                alert('‚ùå Please enter a message!');
                return;
            }

            messageTimestamps.push(now);
            document.getElementById('msgCount').textContent = messageTimestamps.length;

            alert(`‚úÖ Message sent to ${server}: "${message}"`);
            document.getElementById('messageInput').value = '';

            if (messageTimestamps.length >= 5) {
                document.getElementById('sendBtn').disabled = true;
                setTimeout(() => {
                    messageTimestamps = messageTimestamps.filter(time => Date.now() - time < 60000);
                    document.getElementById('msgCount').textContent = messageTimestamps.length;
                    document.getElementById('sendBtn').disabled = false;
                }, 60000);
            }
        }

        // Start the app
        init();

        // Redraw on window resize
        window.addEventListener('resize', () => {
            setupCanvas();
        });
    </script>
</body>
</html>
